{
  "name": "este",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "10.x.x"
  },
  "scripts": {
    "prisma": "prisma",
    "ts-node": "node -r esm -r dotenv/config -r ts-node/register/transpile-only",
    "dev:api": "nodemon --config nodemon.api.json api/index.ts",
    "dev:web": "next",
    "dev:playground": "prisma playground --port 5000",
    "dev:relay:watch": "npm run codegen:relay --watch",
    "dev": "run-p dev:api dev:web dev:playground dev:relay:watch",
    "build:web": "next build",
    "build": "run-p build:web",
    "start:api": "NODE_ENV=production npm run ts-node api/index.ts",
    "start:web": "next start",
    "start": "run-p start:api start:web",
    "test:lint": "tslint -p .",
    "test:tsc": "tsc --project tsconfig.json",
    "test:build": "npm run build",
    "test": "run-s test:lint test:tsc test:build",
    "deps": "rm -rf package-lock.json node_modules && npm i",
    "deploy:db": "cd prisma && prisma deploy",
    "docker:up": "cd prisma && docker-compose up -d && cd ../",
    "docker:down": "cd prisma && docker-compose down && cd ../",
    "codegen:api": "cd api && graphqlgen",
    "codegen:relay": "relay-compiler --src . --include 'components/**' 'pages/**' --schema api/schema.graphql --language typescript --artifactDirectory generated",
    "codegen": "run-s codegen:api",
    "env": "npm run ts-node scripts/env"
  },
  "dependencies": {
    "@playlyfe/gql": "^2.6.1",
    "apollo-server": "^2.3.1",
    "bcryptjs": "^2.4.3",
    "esm": "^3.0.84",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "isomorphic-unfetch": "^3.0.0",
    "jsonwebtoken": "^8.4.0",
    "next": "^7.0.2",
    "prisma-client-lib": "^1.22.2",
    "react": "16.7.0-alpha.2",
    "react-art": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "react-intl": "^2.7.2",
    "react-native-web": "^0.9.8",
    "react-relay": "^1.7.0",
    "relay-runtime": "^1.7.0",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.0.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/next": "^7.0.5",
    "@types/node": "^10.12.15",
    "@types/react": "^16.7.11",
    "@types/react-dom": "^16.0.11",
    "@types/react-intl": "^2.3.14",
    "@types/react-native": "^0.55.28",
    "@types/react-relay": "^1.3.9",
    "@types/relay-runtime": "^1.3.6",
    "@types/validator": "^10.9.0",
    "@zeit/next-typescript": "^1.1.1",
    "babel-plugin-relay": "^1.7.0",
    "dotenv": "^6.2.0",
    "eslint-plugin-relay": "^1.0.0",
    "graphqlgen": "^0.4.0",
    "next-plugin-transpile-modules": "^1.0.0",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "prisma": "^1.23.0",
    "relay-compiler": "^1.7.0",
    "relay-compiler-language-typescript": "^1.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  }
}
